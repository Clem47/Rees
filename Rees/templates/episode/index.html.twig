{% extends 'base.html.twig' %}

{% block title %}Episode index{% endblock %}
{% block stylesheets %}
 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">    <link href="{{ asset('/css/admin.css') }}" type="text/css" rel="stylesheet">  
{% endblock %}
{% block body %}
    <h1>Episode index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Date</th>
                <th>Imdb</th>
                <th>Imdbrating</th>
                <th>Number</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for episode in episodes %}
            <tr>
                <td>{{ episode.id }}</td>
                <td>{{ episode.title }}</td>
                <td>{{ episode.date ? episode.date|date('Y-m-d') : '' }}</td>
                <td>{{ episode.imdb }}</td>
                <td>{{ episode.imdbrating }}</td>
                <td>{{ episode.number }}</td>
                <td>
                    <a href="{{ path('app_episode_show', {'id': episode.id}) }}">show</a>
                    <a href="{{ path('app_episode_edit', {'id': episode.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_episode_new') }}">Create new</a>
{% endblock %}
